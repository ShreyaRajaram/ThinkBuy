{
    "manifest_version": 3,
    "name": "ThinkBuy",
    "version": "1.0",
    "description": "Helps you pause before impulse buying.",
    "permissions": ["storage", "scripting", "activeTab"],
    "host_permissions": [
      "https://*.supabase.co/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["supabase-config.js"],
        "matches": ["<all_urls>"]
      }
    ],
    "icons": {
      "128": "icons/icon128.png"
    }
  }
  